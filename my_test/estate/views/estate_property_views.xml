<odoo>
    <record id="estate_property_act_window" model="ir.actions.act_window">
        <field name="name">信息</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
<!--        <field name="view_id" ref="estate_property_view_form"/>-->
    </record>



    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="搜索name"/>
                <field name="postcode" string="搜索postcode"/>
                <field name="expected_price" string="搜索expected_price"/>
                <field name="bedrooms" string="搜索bedrooms"/>
                <field name="living_area" string="搜索living_area"/>
                <field name="facades" string="搜索facades"/>
                <separator/>
                <filter string="我是过滤器" name="available" domain="['|',('state','=','new'),('state','=','offer_received')]"/>
                <group expand="1" string="group by">
                    <filter string="邮编" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="property_typ_id"/>
                <field name="buyer_id"/>
                <field name="seller_id"/>
            </list>
        </field>
    </record>


    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>
                    <h1><field name="name">我是H1</field></h1>
                    <field name="tag_ids" widget="many2many_tags"/>
                    <group>
                        <group>
                            <field name="property_typ_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="我是描述">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="报价">
                            <field name="offer_ids"/>
                        </page>
                        <page string="其它信息">
                            <group>
                                <field name="buyer_id"/>
                                <field name="seller_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
